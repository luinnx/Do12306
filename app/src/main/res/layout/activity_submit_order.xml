<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#ffececec"
    tools:context="com.cheart.do12306.app.view.SubmitOrderActivity">






    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#ff9d171b"
                android:id="@+id/tv_submitOrder_station_train_code"
                android:textSize="25sp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="K9999"
                />

            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#ffb1b1b1"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:text="选择乘车人"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />



            </LinearLayout>


        <LinearLayout
            android:paddingTop="10dp"
            style="@style/ll_submit_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ListView
                android:id="@+id/lv_submitOrder_passenger"
                android:layout_width="match_parent"
                android:layout_height="150dp">

                </ListView>

        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#ffb1b1b1"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:text="乘车信息"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:paddingTop="10dp"
            style="@style/ll_submit_order"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

                <TableLayout
                    android:id="@+id/tb_submitOrder_ticketInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TableRow
                        android:id="@+id/tr_submitOrder_ticketInfo"
                        android:paddingBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_weight="2"
                                android:paddingRight="5dp"
                                android:paddingLeft="5dp"
                                android:text="姓名"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:layout_weight="2"
                                android:paddingRight="5dp"
                                android:paddingLeft="5dp"
                                android:text="票种"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:layout_weight="2"
                                android:paddingRight="5dp"
                                android:paddingLeft="5dp"
                                android:text="坐席"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:layout_weight="1"
                                android:paddingRight="5dp"
                                android:paddingLeft="5dp"
                                android:text="证件号码"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />


                        </LinearLayout>


                    </TableRow>

                </TableLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ListView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:id="@+id/lv_submitOrder_ticketInfo">


                    </ListView>

                    </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <Button
                android:textColor="#ffffff"
                android:background="#ff5095ff"
                android:id="@+id/bt_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SUBMIT"/>
        </LinearLayout>


        </LinearLayout>



</RelativeLayout>
