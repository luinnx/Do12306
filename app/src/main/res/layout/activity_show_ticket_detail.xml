<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cheart.do12306.app.view.ShowTicketDetail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <LinearLayout
            android:layout_weight="1.7"
           android:background="#ffd7d7d7"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_showTicketDetail_stationTrainCode"
                android:textColor="#ff9d171b"
                android:textSize="20sp"
                android:gravity="center"
                android:text="D324(动车组)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_showTicketDetail_date"
                android:textColor="#ff000000"
                android:gravity="center"
                android:text="2014-05-13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            </LinearLayout>

        <LinearLayout
            android:layout_weight="1.3"
            android:orientation="horizontal"
            android:background="#ff3cb7da"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                <LinearLayout
                android:gravity="right|center_vertical"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:textColor="#ffffff"
                    android:id="@+id/tv_showTicketDetail_fromStationName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="哈尔滨西"
                    android:textSize="23sp" />

                <TextView
                    android:textColor="#ffffff"
                    android:id="@+id/tv_showTicketDetail_startTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="13:20"
                    android:textSize="40sp" />



                </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="30dp" />
                <TextView
                    android:textColor="#ffffff"
                    android:id="@+id/tv_showTicketDetail_lishi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="4小时23分"
                    android:textSize="20sp" />


            </LinearLayout>

            <LinearLayout
                android:gravity="left|center_vertical"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:textColor="#ffffff"
                    android:id="@+id/tv_showTicketDetail_toStationName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="北京"
                    android:textSize="23sp" />

                <TextView
                    android:textColor="#ffffff"
                    android:id="@+id/tv_showTicketDetail_arriveTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="13:20"
                    android:textSize="40sp" />


            </LinearLayout>




        </LinearLayout>


        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1.7"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:id="@+id/ll_show_tickket_detail_t0"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:textColor="@color/query_result_y"
                    android:layout_weight="1"
                    android:id="@+id/tv_showTicketDetail_t0"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text=""
                    android:textSize="20sp" />

                <TextView
                    android:textColor="#ffa97633"
                    android:layout_weight="1"
                    android:id="@+id/tv_showTicketDetail_p0"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text=""
                    android:textSize="20sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_show_tickket_detail_t1"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:textColor="@color/query_result_y"
                    android:layout_weight="1"
                    android:id="@+id/tv_showTicketDetail_t1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text=""
                    android:textSize="20sp" />

                <TextView
                    android:textColor="#ffa97633"
                    android:layout_weight="1"
                    android:id="@+id/tv_showTicketDetail_p1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text=""
                    android:textSize="20sp" />


                </LinearLayout>







            <LinearLayout
                android:id="@+id/ll_show_tickket_detail_t2"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:textColor="@color/query_result_y"
                    android:layout_weight="1"
                    android:id="@+id/tv_showTicketDetail_t2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text=""
                    android:textSize="20sp" />

                <TextView
                    android:textColor="#ffa97633"
                    android:layout_weight="1"
                    android:id="@+id/tv_showTicketDetail_p2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text=""
                    android:textSize="20sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_show_tickket_detail_t3"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:textColor="@color/query_result_y"
                    android:layout_weight="1"
                    android:id="@+id/tv_showTicketDetail_t3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text=""
                    android:textSize="20sp" />

                <TextView
                    android:textColor="#ffa97633"
                    android:layout_weight="1"
                    android:id="@+id/tv_showTicketDetail_p3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text=""
                    android:textSize="20sp" />




            </LinearLayout>

            </LinearLayout>



        <LinearLayout
            android:background="@drawable/bg_ll_show_ticket_detail"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:background="#ff3cb7da"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="#ffffff"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="站次/站名"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <TextView
                    android:textColor="#ffffff"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="到达"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <TextView
                    android:textColor="#ffffff"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="发车"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TextView
                    android:textColor="#ffffff"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="停留"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />


                </LinearLayout>

            <ListView
                android:id="@+id/lv_showTicketDetail_pass"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                </ListView>


            </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1.7"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/lv_showTicketDetail_submit"
                android:background="#ff9d171b"
                android:textColor="#ffffffff"
                android:text="购买"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
