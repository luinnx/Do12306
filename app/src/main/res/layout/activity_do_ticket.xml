<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.cheart.do12306.app.view.DoTicket">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            style="@style/ll_do_ticket"
            android:layout_marginBottom="10dp"
            android:id="@+id/ll_do_ticket_by_date"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="乘车时间"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ListView
                android:id="@+id/lv_do_ticket_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                </ListView>



            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            style="@style/ll_do_ticket"
            android:layout_marginBottom="10dp"
            android:id="@+id/ll_do_ticket_by_ticket_type"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="优先坐席"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <CheckBox
                    android:layout_weight="1"
                    android:text="硬座"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <CheckBox
                    android:layout_weight="1"
                    android:text="硬座"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <CheckBox
                    android:layout_weight="1"
                    android:text="硬座"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <CheckBox
                    android:layout_weight="1"
                    android:text="硬座"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />




                </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <CheckBox
                    android:layout_weight="1"
                    android:text="硬座"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <CheckBox
                    android:layout_weight="1"
                    android:text="硬座"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <CheckBox
                    android:layout_weight="1"
                    android:text="硬座"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <CheckBox
                    android:layout_weight="1"
                    android:text="硬座"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />




            </LinearLayout>


            </LinearLayout>

        <LinearLayout
            style="@style/ll_do_ticket"
            android:id="@+id/ll_do_ticket_by_train_code"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="优先车次"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ListView
                    android:id="@+id/lv_do_train_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    </ListView>
                <Button
                    android:text="添加车次"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                </LinearLayout>



        </LinearLayout>


        <LinearLayout
            style="@style/ll_do_ticket"
            android:id="@+id/ll_do_ticket_select_passenger"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="添加乘车人"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ListView
                    android:id="@+id/lv_do_ticket_passenger"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </ListView>
                <Button
                    android:text="添加乘车人"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>



        </LinearLayout>




        </LinearLayout>

</RelativeLayout>
