<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cheart.do12306.app.view.DoTicket">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_do_ticket_set_do_seat_type"
            style="@style/ll_query"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <TextView
                android:textSize="30sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="优先坐席"
                />

           <TextView
               android:id="@+id/tv_do_ticket_set_do_seat_type"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textSize="20sp"
               android:textColor="#ff4a6d48"
               />

            </LinearLayout>







        <LinearLayout
            android:layout_marginTop="20dp"
            android:id="@+id/ll_do_ticket_set_do_passenger"
            style="@style/ll_query"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <TextView
                android:textSize="30sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="选择乘车人"
                />

            <TextView
                android:id="@+id/tv_do_ticket_set_do_passenger"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text=""
                android:textColor="#ff4a6d48"
                />

        </LinearLayout>



        <LinearLayout
            android:layout_marginTop="20dp"
            android:id="@+id/ll_do_ticket_set_do_train_code"
            style="@style/ll_query"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <TextView
                android:textSize="30sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="选择车次"
                />

            <TextView
                android:id="@+id/tv_do_ticket_set_do_train_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text=""
                android:textColor="#ff4a6d48"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:id="@+id/ll_do_ticket_set_do_submit"
            style="@style/ll_query"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/bt_do_ticket_set_do_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="开始刷票"
                />


        </LinearLayout>


        </LinearLayout>

</RelativeLayout>
